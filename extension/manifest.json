{
  "name": "applr",
  "version": "1.0",
  "description": "Automate the tedious task of inputting your information in job applications in 1 click!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "invalid.png",
      "32": "invalid.png",
      "48": "invalid.png",
      "128": "invalid.png"
    }
  },
  "icons": {
    "16": "invalid.png",
    "32": "invalid.png",
    "48": "invalid.png",
    "128": "invalid.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}